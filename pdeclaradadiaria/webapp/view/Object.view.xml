<mvc:View
	controllerName="com.tasa.pdeclaradadiaria.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:table="sap.ui.table"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">

		<semantic:titleHeading>
			<Title
				text="Detalle de pesca declarada {FECCONMOV}"
				level="H3"/>
		</semantic:titleHeading>

		<semantic:content>
			<IconTabBar
				selectedKey="{objectView>/selectedKey}"
				select="onFilterDiasSelect">
				<content>
					<table:Table
						id="detailTableId"
						selectionMode="None"
						fixedBottomRowCount="1"
						rowsUpdated="onRowsUpateTable"
						visibleRowCount="{/detailVisibleRowCount}"
						class="sapUiNoPadding sapUiNoMargin">
						<table:extension>
							<OverflowToolbar>
								<ObjectStatus
									icon="sap-icon://appointment"
									state="Indication06"
									text="{/dateType}"
									title="{/titleTable}"/>
							</OverflowToolbar>
						</table:extension>
						<table:columns>
							<table:Column headerSpan="2,1">
								<table:multiLabels>
									<Label visible="false" />
									<Label text="Centro" />
								</table:multiLabels>
								<table:template>
									<Text text="{WERKS}" />
								</table:template>
							</table:Column>

							<table:Column headerSpan="2,1">
								<table:multiLabels>
									<Label visible="false" />
									<Label text="Planta" />
								</table:multiLabels>
								<table:template>
									<ObjectStatus 
										text="{DESCR}"
										press=".onPlantaDetail"
										state="{objectView>/statePlanta}"
										active="{objectView>/activePlanta}"/>
								</table:template>
							</table:Column>

							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Total Pesca" />
									<Label text="Decl" />
								</table:multiLabels>
								<table:template>
									<Text text="{
										path:'PDLTO',
										formatter:'.formatter.formatFloat'
									}"
									textAlign="End"
									class="classCol" />
								</table:template>
							</table:Column>
							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Total Pesca" />
									<Label text="Desc" />
								</table:multiLabels>
								<table:template>
									<Text text="{
											path:'PDSTO',
											formatter:'.formatter.formatFloat3'
										}" 
										textAlign="End"
										class="classCol" />
								</table:template>
							</table:Column>
							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Total Pesca" />
									<Label text="Difer %" />
								</table:multiLabels>
								<table:template>
									<Text text="{
										path:'PORC_DIFER',
										formatter:'.formatter.formatFloat'
									}" 
									textAlign="End"
									class="classCol" />
								</table:template>
							</table:Column>

							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Pesca Propios" />
									<Label text="Decl" />
								</table:multiLabels>
								<table:template>
									<Text text="{
											path:'PDLPR'
										}" 
									textAlign="End"
									class="classCol" />
								</table:template>
							</table:Column>
							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Pesca Propios" />
									<Label text="Desc" />
								</table:multiLabels>
								<table:template>
									<Text text="{
										path:'PDSPR',
										formatter:'.formatter.formatFloat3'
									}"
									textAlign="End"
									class="classCol" />
								</table:template>
							</table:Column>
							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Pesca Propios" />
									<Label text="Dif %" />
								</table:multiLabels>
								<table:template>
									<Text text="{
										path:'PORC_DIFER_PR',
										formatter:'.formatter.formatFloat'
									}"
									textAlign="End"
									class="classCol"  />
								</table:template>
							</table:Column>

							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Pesca Terceros" />
									<Label text="Decl" />
								</table:multiLabels>
								<table:template>
									<Text text="{
										path:'PDLTR',
										formatter:'.formatter.formatFloat'
									}"
									textAlign="End"
									class="classCol"  />
								</table:template>
							</table:Column>
							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Pesca Terceros" />
									<Label text="Desc" />
								</table:multiLabels>
								<table:template>
									<Text text="{
										path:'PDSTR',
										formatter:'.formatter.formatFloat3'
									}"
									textAlign="End"
									class="classCol"  />
								</table:template>
							</table:Column>
							<table:Column 
								headerSpan="3,1"
								hAlign="Center">
								<table:multiLabels>
									<Label text="Pesca Terceros" />
									<Label text="Dif %" />
								</table:multiLabels>
								<table:template>
									<Text text="{
										path:'PORC_DIFER_TR',
										formatter:'.formatter.formatFloat'
									}"
									textAlign="End"
									class="classCol"  />
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</content>
				<items>
					<IconTabFilter
						key="D"
						text="DÃ­a"
						icon="sap-icon://badge">
					</IconTabFilter>
					<IconTabSeparator/>
					<IconTabFilter
						key="R"
						text="Rango"
						icon="sap-icon://initiative"
						iconColor="Positive">
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>

		<semantic:closeAction>
			<semantic:CloseAction press="onNavBack" />
		</semantic:closeAction>


	</semantic:SemanticPage>

</mvc:View>