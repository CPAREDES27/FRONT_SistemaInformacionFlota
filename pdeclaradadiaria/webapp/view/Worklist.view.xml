<mvc:View
	controllerName="com.tasa.pdeclaradadiaria.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:table="sap.ui.table"
    xmlns:chart="sap.suite.ui.microchart"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">

	<semantic:SemanticPage
		id="page"
		class="sapUiNoContentPadding">

		<semantic:titleHeading>
			<Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<!-- Header Content -->
		<semantic:headerContent>
			<f:Form id="idFormHeader" editable="true" >
				<f:formContainers>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Fecha">
								<f:fields>
									<DateRangeSelection 
										id="dateRangePescaDeclaradaDiaria"
										value="{/rangeDate}"
										displayFormat="dd/MM/yyyy"
										valueFormat="dd/MM/yyyy" />
								</f:fields>
							</f:FormElement>

						</f:formElements>
					</f:FormContainer>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="">
								<f:fields>
									<Button 
										text="Buscar" 
										icon="sap-icon://search" 
										type="Emphasized" 
										press="onSearchPesca"/>
									<Button 
										text="Limpiar" 
										icon="sap-icon://clear-filter" 
										type="Ghost" 
										press="onClearFilters"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="2"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
			</f:Form>
		</semantic:headerContent>

		<semantic:content>
			
			<VBox class="sapUiSmallMarginTop">
				<items>
				<table:Table id="table" 
					rows="{/STR_DL}"
					busyIndicatorDelay="{worklistView>/tableBusyDelay}"
					rowsUpdated="onRowsUpateTable"
					fixedBottomRowCount="1"
					visibleRowCount="5"
					fixedColumnCount="1"
					selectionMode="None">
					<table:columns>
						<table:Column width="6rem" class="colClass">
							<table:multiLabels>
								<Label text="" />
								<Label text="" />
								<Label text="Fecha" />
							</table:multiLabels>
							<table:template>
								<Link
									text="{FECCONMOV}"
									press="onPress"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="10,2,1" hAlign="Center" width="7rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Total Pesca" />
								<Label text="Harina" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PESC_DECL_CHI',
												formatter:'.formatter.formatFloat'
											}"
										textAlign="End"
										class="colHar"/>
							</table:template>
						</table:Column>
						<table:Column width="7rem" hAlign="Center">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Total Pesca" />
								<Label text="C.H.D." />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PDECH',
												formatter:'.formatter.formatFloat'
											}"
										textAlign="End"
										class="colHar"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="10,2,1" hAlign="Center" width="7rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Pesca Propios" />
								<Label text="TN" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PPCHI',
												formatter:'.formatter.formatFloat'
											}"
										textAlign="End"
										class="colPescaProp"/>
							</table:template>
						</table:Column>
						<table:Column  hAlign="Center" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Pesca Propios" />
								<Label text="%" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PORC_DECL_CHI_PROP',
												formatter:'.formatter.formatFloat'
											}"
										textAlign="End"
										class="colPescaProp"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="10,2,1" hAlign="Center" width="7rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Pesca Terceros" />
								<Label text="TN" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PTCHI',
												formatter:'.formatter.formatFloat'
											}"
										textAlign="End"
										class="colPescaTerc"/>
							</table:template>
						</table:Column>
						<table:Column  width="4rem" hAlign="End">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Pesca Terceros" />
								<Label text="%" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PORC_DECL_CHI_TERC',
												formatter:'.formatter.formatFloat'
											}"
										textAlign="End"
										class="colPescaTerc"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="10,1,1" hAlign="End" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Prop" textAlign="Center" />
								<Label text="Tn/Ep" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'EFIC_PROP',
												formatter:'.formatter.formatBigNumber'
											}"
										textAlign="End"
										class="colTnEp"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="10,1,1" hAlign="Center" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Terc" />
								<Label text="Tn/Ep" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'EFIC_TERC',
												formatter:'.formatter.formatBigNumber'
											}"
										textAlign="End"
										class="colTnEp"/>
							</table:template>
						</table:Column>


						<table:Column headerSpan="10,1,1" hAlign="End" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Prop" textAlign="Center" />
								<Label text="EP" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'CNEMP',
												formatter:'.formatter.formatFloat'
											}"
										textAlign="End"
										class="colEp"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="10,1,1" hAlign="End" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Terc" />
								<Label text="EP" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'CNEMT',
												formatter:'.formatter.formatFloat'
											}"
										textAlign="End"
										class="colEp"/>
							</table:template>
						</table:Column>



						<table:Column headerSpan="5,3,1" hAlign="Center" width="6rem">
							<table:multiLabels>
								<Label text="Pesca descargada" />
								<Label text="Planta propia" />
								<Label text="Pesc terc" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PSTER',
												type:'sap.ui.model.type.Float',
												formatOptions:{
													minFractionDigits:3,
													maxFractionDigits:3,
													groupingSeparator:',',
													decimalSeparator: '.',
													groupingEnabled:true
												}
											}"/>
							</table:template>
						</table:Column>
						<table:Column hAlign="Center" width="6rem">
							<table:multiLabels>
								<Label text="Pesca descargada" />
								<Label text="Planta propia" />
								<Label text="Pesc prop" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PSPRO',
												type:'sap.ui.model.type.Float',
												formatOptions:{
													minFractionDigits:3,
													maxFractionDigits:3,
													groupingSeparator:',',
													decimalSeparator: '.',
													groupingEnabled:true
												}	
											}"
										textAlign="End"
										class="colSinColor"/>
							</table:template>
						</table:Column>
						<table:Column hAlign="Center" width="7rem">
							<table:multiLabels>
								<Label text="Pesca descargada" />
								<Label text="Planta propia" />
								<Label text="Total pesca" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PESC_DESC_CHI',
												type:'sap.ui.model.type.Float',
												formatOptions:{
													minFractionDigits:3,
													maxFractionDigits:3,
													groupingSeparator:',',
													decimalSeparator: '.',
													groupingEnabled:true
												}
											}"
										textAlign="End"
										class="colTotal"/>
							</table:template>
						</table:Column>


						<table:Column headerSpan="5,2,1" hAlign="Center" width="8rem">
							<table:multiLabels>
								<Label text="Pesca descargada" />	
								<Label visible="false"/>
								<Label text="Planta terceros" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PDECH',
												type:'sap.ui.model.type.Float',
												formatOptions:{
													minFractionDigits:3,
													maxFractionDigits:3,
													groupingSeparator:',',
													decimalSeparator: '.',
													groupingEnabled:true
												}
											}"
										textAlign="End"
										class="colSinColor"/>
							</table:template>
						</table:Column>
						<table:Column width="6rem" hAlign="Center">
							<table:multiLabels>
								<Label text="Pesca descargada" />
								<Label visible="false" />
								<Label text="CHD" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PSCHD',
												type:'sap.ui.model.type.Float',
												formatOptions:{
													minFractionDigits:3,
													maxFractionDigits:3,
													groupingSeparator:',',
													decimalSeparator: '.',
													groupingEnabled:true
												}
											}"
										textAlign="End"
										class="colSinColor"/>
							</table:template>
						</table:Column>

						<table:Column width="4rem" hAlign="End">
							<table:multiLabels>
								<Label visible="false" />
								<Label text="Difer" />
								<Label text="%" />
							</table:multiLabels>
							<table:template>
								<Text text="{
												path:'PORC_DIFER',
												type:'sap.ui.model.type.Float',
												constraints:{
													maximum:1
												},
												formatOptions:{
													preserveDecimals:false,
													maxFractionDigits:0,
													minFractionDigits:0,
													groupingSeparator:',',
													decimalSeparator: '.',
													groupingEnabled:true
												}
											}"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
					<HBox
						alignContent="SpaceBetween"
						class="sapUiMediumMarginTop">
						<items>
							<FlexBox 
								width="40%"
								justifyContent="SpaceAround" 
								class="sapUiSmallMargin">
								<items>
									<chart:InteractiveBarChart 
										bars="{/dataGraficPorc}" 
										labelWidth="25%" 
										displayedBars="2">
										<chart:bars>
											<chart:InteractiveBarChartBar 
												label="{descripcion}" 
												value="{
															path:'value'
															
														}" 
												displayedValue="{porcentaje}"
												color="Good"/>
										</chart:bars>
									</chart:InteractiveBarChart>
								</items>
							</FlexBox>

							<FlexBox
								width="100%" 
								alignItems="Center" 
								justifyContent="SpaceAround" 
								class="sapUiSmallMargin">
								<!-- <items> -->
									<viz:VizFrame
										height="20rem"
										vizType='line'
										uiConfig="{applicationSet:'fiori'}"
										vizProperties="{
											title:{text:'Tn/Ep'}
										}">
										<viz:dataset>
											<viz.data:FlattenedDataset 
												data="{
														path:'/dataViz',
														sorter:{
															path:'fecha',
															descending:false
														}
													}">
												<viz.data:dimensions>
													<viz.data:DimensionDefinition 
														name="Fecha"
														value="{
																	path:'fecha',
																	formatter:'.formatter.formatDateDDMMYYYY'
																}" />
												</viz.data:dimensions>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="Propios"
														value="{=${propio}>10000?0:${propio}}" />	
													<viz.data:MeasureDefinition name="Terceros"
														value="{=${tercero}>10000?0:${tercero}}" />
												</viz.data:measures>
											</viz.data:FlattenedDataset>
										</viz:dataset>
										<viz:feeds>
											<viz.feeds:FeedItem id='valueAxisFeed' uid="valueAxis" type="Measure"
												values="Propios,Terceros" />
											<viz.feeds:FeedItem id='categoryAxisFeed' uid="categoryAxis" type="Dimension"
												values="Fecha" />
										</viz:feeds>
									</viz:VizFrame>
								<!-- </items> -->
							</FlexBox>
						</items>
					</HBox>
				</items>
			</VBox>
		</semantic:content>


	</semantic:SemanticPage>

</mvc:View>