<mvc:View
	controllerName="com.tasa.pdeclaradadiaria.controller.Worklist"
	xmlns="sap.m"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:table="sap.ui.table"
    xmlns:chart="sap.suite.ui.microchart"
	xmlns:layout="sap.ui.layout"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<!-- Header Content -->
		<semantic:headerContent>
			<f:Form id="idFormHeader" >
				<f:formContainers>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Fecha">
								<f:fields>
									<DateRangeSelection id="dateRangePescaDeclaradaDiaria" />
								</f:fields>
							</f:FormElement>

							<f:FormElement >
								<f:fields>
									<Button text="Buscar" type="Emphasized" press="buscarPescaDescargadaDiaria"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="2"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
			</f:Form>
		</semantic:headerContent>

		<semantic:content>
			<layout:Grid defaultSpan="XL12 L12 M12 S12" >
				<table:Table id="table" 
					rows="{/STR_DL}"
					busyIndicatorDelay="{worklistView>/tableBusyDelay}"
					fixedBottomRowCount="1"
					rowsUpdated=".onUpdateFinished"
					visibleRowCount="5">
					<table:columns>
						<table:Column width="6rem">
							<table:multiLabels>
								<Label text="" />
								<Label text="" />
								<Label text="Fecha" />
							</table:multiLabels>
							<table:template>
								<Text text="{FECCONMOV}"/>     
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="Center" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Total Pesca" />
								<Label text="Harina" />
							</table:multiLabels>
							<table:template>
								<Text text="{PESC_DECL_CHI}"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="4" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Total Pesca" />
								<Label text="C.H.D." />
							</table:multiLabels>
							<table:template>
								<Text text="{PDECH}"/>
							</table:template>
						</table:Column>
						
						<table:Column headerSpan="2" hAlign="Center">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Pesca Propios" />
								<Label text="TN" />
							</table:multiLabels>
							<table:template>
								<Text text="{PPCHI}"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="2">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Pesca Propios" />
								<Label text="%" />
							</table:multiLabels>
							<table:template>
								<Text text="{PORC_DECL_CHI_PROP}%"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="4" hAlign="Center">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Pesca Terceros" />
								<Label text="TN" />
							</table:multiLabels>
							<table:template>
								<Text text="{PTCHI}"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="4">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Pesca Terceros" />
								<Label text="%" />
							</table:multiLabels>
							<table:template>
								<Text text="{PORC_DECL_CHI_TERC}%"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="Center" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Prop" textAlign="Center" />
								<Label text="Tn/Ep" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{EFIC_PROP}"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="4" hAlign="End" width="4rem">
							<table:multiLabels>
								<Label text="Pesca declarada" />
								<Label text="Terc" />
								<Label text="Tn/Ep" />
							</table:multiLabels>
							<table:template>
								<Text text="{EFIC_TERC}"/>
							</table:template>
						</table:Column>


						<table:Column headerSpan="4" hAlign="End" width="4rem">
							<table:multiLabels>
								<Label text="Pesca descargada" />
								<Label text="Planta propia" />
								<Label text="Pesc prop" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{CNEMP}"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="4" hAlign="End" width="4rem">
							<table:multiLabels>
								<Label text="Pesca descargada" />
								<Label text="Planta propia" />
								<Label text="Pesc terc" />
							</table:multiLabels>
							<table:template>
								<Text text="{CNEMT}"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="4" hAlign="End" width="4rem">
							<table:multiLabels>
								<Label text="Pesca descargada" />
								<Label text="Planta propia" />
								<Label text="Total pesca" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{PSPRO}"/>
							</table:template>
						</table:Column>


						<table:Column headerSpan="2" hAlign="Center">
							<table:multiLabels>
								<Label text="Pesca descargada" />	
								<Label text="" />
								<Label text="Planta terceros" />
							</table:multiLabels>
							<table:template>
								<Text text="{PSTER}"/>
							</table:template>
						</table:Column>
						<table:Column headerSpan="2">
							<table:multiLabels>
								<Label text="Pesca descargada" />
								<Label text="" />
								<Label text="CHD" />
							</table:multiLabels>
							<table:template>
								<Text text="{PSPRO}"/>
							</table:template>
						</table:Column>
						<table:Column >
							<table:multiLabels>
								<Label text="" />
								<Label text="" />
								<Label text="%" />
							</table:multiLabels>
							<table:template>
								<Button icon="sap-icon://show" />
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>

				<layout:HorizontalLayout>
					<layout:layoutData>
						<layout:GridData span="XL12 L12 M12 S12"/>
					</layout:layoutData>
					<!-- Graficos -->
					<FlexBox width="20rem" height="10rem" alignItems="End" justifyContent="SpaceAround" class="sapUiSmallMargin">
						<items>
							<chart:InteractiveBarChart bars="{/PORC_PESC_DECL}" labelWidth="25%" displayedBars="3" selectionChanged="selectionChanged" press="press">
								<chart:bars>
									<chart:InteractiveBarChartBar label="{descripcion}" value="{value}" color="Critical"/>
								</chart:bars>
							</chart:InteractiveBarChart>
						</items>
					</FlexBox>
<!-- 
					<layout:flexContent>
						<viz:Popover id="idPopOver"></viz:Popover>
						<viz:VizFrame id="idVizFrameTnEp" uiConfig="{applicationSet:'fiori'}"
							height='100%' width="100%" vizType='line'>
							<viz:dataset>
								<viz.data:FlattenedDataset data="{/TN_EP}">
									<viz.data:dimensions>
										<viz.data:DimensionDefinition name="Week"
											value="{fecha}" />
									</viz.data:dimensions>
									<viz.data:measures>
										<viz.data:MeasureDefinition name="Revenue"
											value="{prop}" />
										<viz.data:MeasureDefinition name="Cost"
											value="{terc}" />
									</viz.data:measures>
								</viz.data:FlattenedDataset>
							</viz:dataset>

							<viz:feeds>
								<viz.feeds:FeedItem id='valueAxisFeed' uid="valueAxis" type="Measure"
									values="Revenue" />
								<viz.feeds:FeedItem id='categoryAxisFeed' uid="categoryAxis" type="Dimension"
									values="Week" />
							</viz:feeds>
						</viz:VizFrame>
					</layout:flexContent> -->

					<FlexBox items="{/PESCA_TN_EP}" width="20rem" height="10rem" alignItems="Center" justifyContent="SpaceAround" class="sapUiSmallMargin">
						<items>
							<chart:LineMicroChart color="Good"
							leftTopLabel=""
							showPoints="true" lines="{lines}">
								<chart:lines>
									<chart:LineMicroChartLine color="Critical" type="Solid" showPoints="true" points="{points}">
										<chart:LineMicroChartPoint
											x="{min}"
											y="{max}"
										>
											
										</chart:LineMicroChartPoint>
									</chart:LineMicroChartLine>
								</chart:lines>
								<chart:points>
								</chart:points>
							</chart:LineMicroChart>
						</items>
					</FlexBox>
				</layout:HorizontalLayout>
			</layout:Grid>
		</semantic:content>


	</semantic:SemanticPage>

</mvc:View>