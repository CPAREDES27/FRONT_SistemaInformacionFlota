<mvc:View
	controllerName="com.tasa.pdescargada.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:table="sap.ui.table"
    xmlns:chart="sap.suite.ui.microchart"
	xmlns:layout="sap.ui.layout">

	<semantic:SemanticPage
		id="page"
		class="sapUiNoContentPadding">

		<semantic:titleHeading>
			<Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<!-- Header Content -->
		<semantic:headerContent>
			<f:Form 
				editable ="true"
				binding = "{/help}" >
				<f:formContainers>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Fecha">
								<f:fields>
									<DateRangeSelection 
										dateValue="{dateFrom}"
										secondDateValue ="{dateTo}"
										displayFormat = "dd/MM/yyyy" 
										valueFormat = "dd/MM/yyyy"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="" >
								<f:fields>
									<Button text="Buscar" type="Emphasized" icon="sap-icon://search" press="onSearchPescaDescargada"/>
									<Button text="Limpiar" type="Ghost" icon="sap-icon://clearFilter" press="onCleanSearch"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="2"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="2"
						singleContainerFullSize="false" />
				</f:layout>
			</f:Form>
		</semantic:headerContent>

		<semantic:content>
			<layout:Grid defaultSpan="XL12 L12 M12 S12" class="sapUiSmallMarginTop">
				<!-- <table:Table id="table" 
					rows="{/STR_DSD}"
					busyIndicatorDelay="{worklistView>/tableBusyDelay}"
					rowsUpdated=".onUpdateFinished"
					fixedBottomRowCount="1"
					visibleRowCount="5">
					<table:columns>
						<table:Column width="8rem">
							<Label text="Fecha" />
							<table:template>
								<Text text="{FIDES}"/>     
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="Center" width="4rem">
								<Label text="Pesca" textAlign="End" />
							<table:template>
								<Text text="{CNPDS}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="End" width="4rem">
								<Label text="Días" />
							<table:template>
								<Text text="{CORREL}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="End" width="4rem">
								<Label text="Promedio" />
							<table:template>
								<Text text="{PROMCNPDS}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="End" width="4rem">
								<Label text="MALAB SUR" />
							<table:template>
								<Text text="{CNPDS0005}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="End" width="4rem">
								<Label text="CHIMB" />
							<table:template>
								<Text text="{CNPDS0119}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="End" width="4rem">
								<Label text="SAMANCO" />
							<table:template>
								<Text text="{CNPDS0009}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="4" hAlign="End" width="4rem">
								<Label text="SUPE" />
							<table:template>
								<Text text="{CNPDS0010}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="2" hAlign="Center" width="4rem">
								<Label text="VEGUETA" />
							<table:template>
								<Text text="{CNPDS0011}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="2" hAlign="Center" width="4rem">
								<Label text="CALLAO NOR" />
							<table:template>
								<Text text="{CNPDS0012}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="2" hAlign="Center" width="4rem">
								<Label text="PISCO SUR" />
							<table:template>
								<Text text="{CNPDS0015}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="2" hAlign="Center" width="4rem">
								<Label text="MATARANI" />
							<table:template>
								<Text text="{CNPDS0018}"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table> -->
				<Table
					id="table"
					columns = "{
						path:'/columns'
					}"
					items = "{
						path:'/items',
						factory:'.createItems'
					}"
					showNoData="true"
					noDataText="{worklistView>/tableNoDataText}"
					busyIndicatorDelay="{worklistView>/tableBusyDelay}">
					<columns>
						<Column hAlign="{align}" styleClass="{styleClass}" >
							<Text text="{header}" />
							<footer>
								<Text text="{
									path:'footer',
									formatter:'.formatter.formatFloat'
								}" />
							</footer>
						</Column>
					</columns>
				</Table>
				<layout:HorizontalLayout>
					<layout:layoutData>
						<layout:GridData span="XL12 L12 M12 S12"/>
					</layout:layoutData>
					<!-- Graficos -->
					<FlexBox width="25rem" height="35rem" direction="Column" alignItems="Center" justifyContent="SpaceAround" class="sapUiSmallMargin">
						<items>
							<ObjectStatus 
								text="Pesca descargada por día"
								state="Indication06" />
							<chart:InteractiveBarChart 
								bars="{/items}" 
								labelWidth="25%" 																																																																																																																																																		
								selectionChanged="selectionChanged" 
								press="press"
								displayedBars="{=${/items}.length}">
								<chart:bars>
									<chart:InteractiveBarChartBar 
										label="{FIDES}" 
										value="{CNPDS}" 
										color="Critical"/>
								</chart:bars>
							</chart:InteractiveBarChart>
						</items>
					</FlexBox>

					<FlexBox width="20rem" height="10rem" direction="Column" alignItems="Center" justifyContent="SpaceAround" class="sapUiSmallMargin">
						<items>
							<!-- <chart:InteractiveDonutChart selectionChanged="onSelectionChanged">
								<chart:segments>
									<chart:InteractiveDonutChartSegment label="Implementation Phase" value="40.0" displayedValue="40.0%" color="Error"/>
									<chart:InteractiveDonutChartSegment label="Design Phase" value="21.5" displayedValue="21.5%" color="Critical"/>
									<chart:InteractiveDonutChartSegment label="Test Phase" value="38.5" displayedValue="38.5%" color="Good"/>
								</chart:segments>
							</chart:InteractiveDonutChart> -->
							<ObjectStatus 
								text="Pesca descargada por planta"
								state="Indication06" />
							<chart:ColumnMicroChart 
								columns="{/plantas}" 
								size="L" 
								press="press" 
								class="sapUiSmallMargin"
								allowColumnLabels="true">
								<chart:columns>
									<chart:ColumnMicroChartData label="{label}" value="{value}" color="Good"/>
								</chart:columns>
							</chart:ColumnMicroChart>
						</items>
					</FlexBox>
				</layout:HorizontalLayout>
			</layout:Grid>
		</semantic:content>

	</semantic:SemanticPage>

</mvc:View>