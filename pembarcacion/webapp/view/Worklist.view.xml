<mvc:View xmlns:core="sap.ui.core"
	controllerName="com.tasa.pembarcacion.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:table="sap.ui.table">

	<semantic:SemanticPage
		id="page">

		<semantic:titleHeading>
			<Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<!-- Header Content -->
		<semantic:headerContent>
			<f:Form 
				id="idFormHeader" 
				editable="true"
				binding="{/formSearch}">
				<f:formContainers>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Opción">
								<f:fields>
									<RadioButtonGroup columns="2" valueState="Error" select="onSelectRadioButton" >
										<RadioButton text="Temporada" class="sapUiMediumMarginEnd" />
										<RadioButton text="Fecha" />
									</RadioButtonGroup>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Temporadas">
								<f:fields>
									<Input 
										id="txtTemporadas"
										value="{
											parts:[
												{path:'startDate'},
												{path:'endDate'},
												{path:'tempDesc'}
											]
										}"
										placeholder="Seleccione temporada"
										showValueHelp="true"
										valueHelpRequest="onSearchHelp"
										enabled="{worklistView>/enabledTempInput}"
										change="updateDateRange"
										tooltip="{tempDesc}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Fecha">
								<f:fields>
									<DateRangeSelection 
										id="dateRangePescaEmbarcacion"
										value="{fecha}"
										displayFormat="dd/MM/yyyy"
										valueFormat="dd/MM/yyyy"
										enabled="{worklistView>/enabledDateInput}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
					
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Tipo embarcación">
								<f:fields>
									<Select 
										id="tipoEmbarcacion" 
										selectedKey="{tipoEmb}"
										items="{ path: '/tipoEmbarcacion' }" >
										<core:Item key="{id}" text="{descripcion}" />
									</Select>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="">
								<f:fields>
									<Button 
										text="Buscar" 
										type="Emphasized"
										icon="sap-icon://search" 
										press="onPescaSearch"/>
										<Button 
											text="Limpiar" 
											type="Ghost"
											icon="sap-icon://clear-filter" 
											press="onClearSearch"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
			</f:Form>
			<FlexBox justifyContent="End" >
				<items>
					
				</items>
			</FlexBox>
		</semantic:headerContent>

		<semantic:content>
			<table:Table id="table" 
					rows="{/PESCAS_EMBARCACION}"
					fixedColumnCount="1"
					selectionMode="None"
					busyIndicatorDelay="{worklistView>/tableBusyDelay}"
					rowsUpdated=".onUpdateFinished"
					fixedBottomRowCount="1"
					class="classTable">
					<table:extension>
						<OverflowToolbar style="Clear">
							<ToolbarSpacer />
							<Button 
								text="Exportar"
								type="Emphasized" 
								icon="sap-icon://excel-attachment" 
								press="onExport"/>
						</OverflowToolbar>
					</table:extension>
					<table:columns>
						<table:Column width="12rem">
							<table:multiLabels>
								<Label text="" />
								<Label text="Embarcación" />
							</table:multiLabels>
							<table:template>
								<Text text="{NMEMB}"/>     
							</table:template>
						</table:Column>

						<table:Column width="4rem">
							<table:multiLabels>
								<Label text="" />
								<Label text="CBOD" />
							</table:multiLabels>
							<table:template>
								<Text text="{CPPMS}"/>     
							</table:template>
						</table:Column>
						
						<table:Column 
							headerSpan="2,1" 
							hAlign="Center" 
							width="5rem" 
							visible="{worklistView>/visibleColCuota}">
							<table:multiLabels>
								<Label text="CUOTA" textAlign="Center" />
								<Label text="Periodo" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{CPRNC}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="2,1" 
							hAlign="End" 
							width="6rem"
							visible="{worklistView>/visibleColCuota}">
							<table:multiLabels>
								<Label text="CUOTA" />
								<Label text="Avance(%)" />
							</table:multiLabels>
							<table:template>
								<Text text="{= ${CAVNC} * 100}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="4,1" hAlign="Center" width="7rem">
							<table:multiLabels>
								<Label text="Pesca TM" />
								<Label text="Centro Norte" textAlign="Center" />
							</table:multiLabels>
							<table:template>
								<Text text="{CNDCN}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="4,1" 
							hAlign="End" 
							width="4rem"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels>
								<Label text="Pesca TM" />
								<Label text="Sur" />
							</table:multiLabels>
							<table:template>
								<Text text="{CNDSU}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="4,1" 
							hAlign="Center" 
							width="4rem"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels >
								<Label text="Pesca TM" />
								<Label text="CHD" />
							</table:multiLabels>
							<table:template>
								<Text text="{CNDHD}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="4,1" 
							width="4rem"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels>
								<Label text="Pesca TM" />
								<Label text="Total" />
							</table:multiLabels>
							<table:template>
								<Text text="{CNDTO}"/>
							</table:template>
						</table:Column>

						<table:Column headerSpan="7,1" hAlign="Center" width="7rem">
							<table:multiLabels>
								<Label text="Días de Pesca" />
								<Label text="Centro Norte" />
							</table:multiLabels>
							<table:template>
								<Text text="{DIPCN}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="7,1" 
							width="4rem"
							hAlign="End"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels>
								<Label text="Días de Pesca" />
								<Label text="Sur" />
							</table:multiLabels>
							<table:template>
								<Text text="{DIPSU}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="4" 
							width="4rem"
							hAlign="End"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels>
								<Label text="Días de Pesca" />
								<Label text="CHD" />
							</table:multiLabels>
							<table:template>
								<Text text="{DIPHD}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="7,1" 
							width="7rem"
							hAlign="End"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels>
								<Label text="Días de Pesca" />
								<Label text="Sin Pesca Sur" />
							</table:multiLabels>
							<table:template>
								<Text text="{DSPSU}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="2" 
							hAlign="End" 
							width="8rem"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels>
								<Label text="Días de Pesca" />
								<Label text="Sin Pesca CHD" />
							</table:multiLabels>
							<table:template>
								<Text text="{DSPHD}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="7,1" 
							width="4rem"
							hAlign="End"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels>
								<Label text="Días de Pesca" />
								<Label text="Veda" />
							</table:multiLabels>
							<table:template>
								<Text text="{DIVED}"/>
							</table:template>
						</table:Column>
						<table:Column 
							headerSpan="7,1" 
							hAlign="Center" 
							width="6rem"
							visible="{worklistView>/visibleColTM}">
							<table:multiLabels>
								<Label text="Días de Pesca" />
								<Label text="Total" />
							</table:multiLabels>
							<table:template>
								<Text text="{TOTDI}"/>
							</table:template>
						</table:Column>

						<table:Column 
							headerSpan="1" 
							width="6rem"
							hAlign="End"
							visible="{worklistView>/visibleColDias}">
							<table:multiLabels>
								<Label text="Dias" />
								<Label text="Faltantes" />
							</table:multiLabels>
							<table:template>
								<Text text="{DIFAL}"/>
							</table:template>
						</table:Column>

						<table:Column 
							headerSpan="1" 
							hAlign="Center" 
							width="6rem"
							visible="{worklistView>/visibleColDias}">
							<table:multiLabels>
								<Label text="" />
								<Label text="Rend(%)" />
							</table:multiLabels>
							<table:template>
								<Text text="{= ${RENEM} * 100}"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
		</semantic:content>

	</semantic:SemanticPage>

</mvc:View>