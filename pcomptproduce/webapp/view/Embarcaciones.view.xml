<mvc:View
	controllerName="com.tasa.pcomptproduce.controller.Embarcaciones"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{embarcacionesView>/busy}"
		busyIndicatorDelay="{embarcacionesView>/delay}">

		<semantic:titleHeading>
			<m:ObjectStatus 
				title="EMBARCACIONES"
				text="{DSEMP}{DSGRE}"
				state="Information"/>
			<!-- <m:Title
				text="{DSGRE}"
				level="H2"/> -->
		</semantic:titleHeading>

		<semantic:content>
			<Table 
				id = "tableEmbarcaciones"
				rows = "{/table}"
				sort="onSort"
				selectionMode="None">
				<extension>
					<m:OverflowToolbar >
						<m:Title text="{embarcacionesView>/embarcacionesTableTitle}" />
						<m:ToolbarSpacer />
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column width="20rem">
						<!-- <multiLabels> -->
							<m:Label text="Grupo empresarial"/>
						<!-- </multiLabels> -->
						<template>
							<m:Text text="{DSGRT}" />
						</template>
					</Column>

					<Column width="8rem">
						<multiLabels>
							<m:Label text="Embarcación" />
						</multiLabels>
						<template>
							<m:ObjectStatus
								text="{
								path:'NMEMB'
								}"
								active="true"
								press=".onPress"
								state="Information" />
						</template>
					</Column>

					<Column width="8rem">
						<multiLabels>
							<m:Label text="Matrícula" />
						</multiLabels>
						<template>
							<m:Text text="{MREMB}" />
						</template>
					</Column>

					<Column width="6rem"
							hAlign="End">
						<multiLabels>
							<m:Label text="CBOD"/>
						</multiLabels>
						<template>
							<m:Text text="{CPPMS}"  />
						</template>
					</Column>

					<Column width="6rem"
							hAlign="End">
						<multiLabels>
							<m:Label text="Pesca" />
						</multiLabels>
						<template>
							<m:Text 
								text="{
									path:'CNPDS',
									formatter:'.formatter.setFormatInteger'
								}"
								class="classPesca" 
								textAlign="End"/>
						</template>
					</Column>

					<Column width="6rem"
							hAlign="End">
						<multiLabels>
							<m:Label text="Num desc" />
						</multiLabels>
						<template>
							<m:Text text="{
									path:'CNDSH',
									formatter:'.formatter.setFormatInteger'
								}" />
						</template>
					</Column>
						
					<Column width="8rem"
							hAlign="Begin">
						<multiLabels>
							<m:Label text="Ind prop" />
						</multiLabels>
						<template>
							<m:Text text="{
								path:'INPRP'
							}" />
						</template>
					</Column>
				</columns>
			</Table>
		</semantic:content>

		<semantic:closeAction>
			<semantic:CloseAction press="onNavBack" />
		</semantic:closeAction>

	</semantic:SemanticPage>

</mvc:View>