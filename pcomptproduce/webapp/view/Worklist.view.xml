			<IconTabBar
				selectedKey="{worklistView>/mainSelectedKey}"
				stretchContentHeight="true"
				tabDensityMode="Compact"
				backgroundDesign="Translucent"
				headerMode="Standard">
				<content>
					<table:Table 
						id = "table"
						rows = "{
							path:'/tableItems/str_emp',
							events:{
								change:'.onRowsDataChange'
							}
						}"
						columns = "{path:'/tableItems/str_zlt'}"
						sort="onSort"
						selectionMode="None">
						<table:extension>
							<OverflowToolbar >
								<Title text="{worklistView>/worklistTableTitle}" />
								<ToolbarSpacer />
								<Button 
									icon="sap-icon://multi-select"
									text="Puertos por zona" 
									press="onAbrirZonas"
									type="Accept"/>
								<Label text="Puertos de zona litoral" />
								<Select 
									forceSelection="false"
									selectedKey="{}"
									items="{
										path:'/tableItems/str_zlt'
									}">
									<core:Item text="{DSZLT}" key="{CDZLT}"/>
								</Select>
							</OverflowToolbar>
						</table:extension>
						<table:columns>
							<table:Column
								sortProperty="">
								<Label text=""/>
								<table:template>
									<Text text="{}" />
								</table:template>
							</table:Column>
							<table:Column
								sortProperty="">
								<Label text=""/>
								<table:template>
									<Text text="{}" />
								</table:template>
							</table:Column>
							<table:Column
								sortProperty="">
								<Label text=""/>
								<table:template>
									<Text text="{}" />
								</table:template>
							</table:Column>
							<table:Column
								sortProperty="">
								<Label text=""/>
								<table:template>
									<Text text="{}" />
								</table:template>
							</table:Column>
							<table:Column
								sortProperty="">
								<Label text=""/>
								<table:template>
									<Text text="{}" />
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</content>
				<items>
					<IconTabFilter
						showAll="true"
						text="Todos"
						count="{worklistView>/tabCount}"
						key="TO"/>
					<IconTabSeparator />
					<IconTabFilter
						icon="sap-icon://shield"
						text="Propios"
						count="{worklistView>/tabCount}"
						key="PP"/>
					<IconTabSeparator />
					<IconTabFilter
						icon="sap-icon://badge"
						text="Terceros"
						count="{worklistView>/tabCount}"
						key="TR"/>
				</items>
			</IconTabBar>
		</semantic:content>

	</semantic:SemanticPage>

</mvc:View>