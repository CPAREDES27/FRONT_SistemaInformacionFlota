<core:FragmentDefinition 
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns="sap.ui.table">
    <Table
        id="tableArmad"
        selectionMode="None"
        visibleRowCount="8"
        fixedColumnCount="1"
        fixedBottomRowCount="3"
        class="classPrincipalTable">
        <extension>
            <m:OverflowToolbar >
                <m:Title text="{worklistView>/worklistTableTitle}" />
                <m:ToolbarSpacer />
            </m:OverflowToolbar>
        </extension>
        <columns>
            <!-- Columna Grupo Empresarial -->
                <Column width="15rem"
                        hAlign="Begin">
                    <multiLabels>
                        <m:Label text=""/>
                        <m:Label text="GRUPO EMPRESARIAL"/>
                    </multiLabels>
                    <template>
                        <m:ObjectStatus
                            text="{DSGRE}"
                            active="true"
                            state="Information"
                            press=".onPress" />
                    </template>
                </Column>

            <!-- Columnas de CUOTA -->
                <Column width="5rem"
                        headerSpan="2,1"
                        hAlign="Center" >
                    <multiLabels>
                        <m:Label text="CUOTA" />
                        <m:Label text="PerÃ­odo" />
                    </multiLabels>
                    <template>
                        <m:Text 
                            text="{= ${/help/ZCDZAR} === '001' ? ${CPRNC} : ${CPRSU}}"  
                            textAlign="End"
                            class="classPeriodo"/>
                    </template>
                </Column>

                <Column width="5.5rem"
                        hAlign="End">
                    <multiLabels>
                        <m:Label text="CUOTA" />
                        <m:Label text="Avance(%)" />
                    </multiLabels>
                    <template>
                        <m:Text 
                            text="{= ${/help/ZCDZAR} === '001' ? ${CAVNC} : ${CAVSU}}"
                            textAlign="End"
                            class="classPuerto"  />
                    </template>
                </Column>

            <!-- COlumnas de totales -->
                <Column width="6.5rem"
                        headerSpan="5,1"
                        hAlign="Center">
                    <multiLabels>
                        <m:Label text="TOTALES" />
                        <m:Label text="Pesca" />
                    </multiLabels>
                    <template>
                        <m:Text text="{
                                parts:[
                                    {path:'pescaTotalD'},
                                    {path:'pescaTotalP'},
                                    {path:'pescaTotalT'}
                                ],
                                formatter:'.formatter.setTotalCol'
                            }"
                            textAlign="End"
                            class="classPesca" />
                    </template>
                </Column>

                <Column width="4rem"
                        hAlign="End">
                    <multiLabels>
                        <m:Label text="TOTALES" />
                        <m:Label text="% Ds Tasa" />
                    </multiLabels>
                    <template>
                        <m:Text text="{
                            parts:[
                                {path:'CDTAS'},
                                {path: 'nDesTotalD'}
                            ],
                            formatter:'.formatter.setDivision'
                        }"
                        textAlign="End"
                        class="classDsTasa" />
                    </template>
                </Column>

                <Column width="4.5rem"
                        hAlign="End">
                    <multiLabels>
                        <m:Label text="TOTALES" />
                        <m:Label text="Emba"/>
                    </multiLabels>
                    <template>
                        <m:Text text="{
                                parts:[
                                    {path: 'NREMB'},
                                    {path: 'EMBPR'},
                                    {path: 'EMBTR'}
                                ],
                                formatter: '.formatter.setTotalCol'    
                            }" 
                            textAlign="End"
                            class="classTotales" />
                    </template>
                </Column>

                <Column width="5.5rem"
                        hAlign="End">
                    <multiLabels>
                        <m:Label text="TOTALES" />
                        <m:Label text="NDes" />
                    </multiLabels>
                    <template>
                        <m:Text text="{
                                parts:[
                                    {path:'nDesTotalD'},
                                    {path:'nDesTotalP'},
                                    {path:'nDesTotalT'}
                                ],
                                formatter: '.formatter.setTotalCol'
                            }" 
                            textAlign="End"
                            class="classTotales"/>
                    </template>
                </Column>

                <Column width="5rem"
                        hAlign="End">
                    <multiLabels>
                        <m:Label text="TOTALES" />
                        <m:Label text="t/NDes" />
                    </multiLabels>
                    <template>
                        <m:Text text="{
							parts:[
								{path: 'nCocPescaNdesD'},
                                {path: 'nCocPescaNdesP'},
                                {path: 'nCocPescaNdesT'}
							],
                            formatter: '.formatter.setTotalCoc'
						}"
                        textAlign="End"
                        class="classTotales" />
                    </template>
                </Column>

        </columns>
    </Table>
</core:FragmentDefinition>