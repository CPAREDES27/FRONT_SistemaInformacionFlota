<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    <Popover
		id="myListPopover"
		title="Seleccione zona para mostrar puertos"
		afterClose="handleAfterClose"
		placement="Left">
		<List
			id="list"
			items="{
					path:'str_zlt',
					sorter:{
						path:'CDZLT'
					}
				}">
			<StandardListItem
				title="{CDZLT}"
				info="{DSZLT}"
				type="Active"
				infoState="Information"
                press="onSeleccionarPuerto" />
		</List>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://show"
					text="Mostrar todos"
					press="onShowPuertos"
					type="Accept"
					visible="{worklistView>/bMostrarPuertos}" />
				<Button
					id="action"
					icon="sap-icon://hide"
					text="Ocultar Puertos"
					press="onHidePuertos"
					type="Reject"
					visible="{worklistView>/bMostrarPuertos}" />
			</Toolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>